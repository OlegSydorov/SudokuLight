<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2_template"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/returnView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/text_view2_template"
        android:fontFamily="@font/the_bomb"
        android:gravity="center"
        android:shadowColor="@color/Lime"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="10"
        android:text="Return to game"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/Green"
        android:textSize="15sp"
        android:textStyle="bold"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/statsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/returnView"
        android:layout_margin="10dp"
        android:scrollbars="vertical"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg3_template"/>


</RelativeLayout>