<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2_template"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/textView0"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/text_view2_template"
        android:fontFamily="@font/the_bomb"
        android:gravity="center"
        android:shadowColor="@color/Lime"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="10"
        android:text="Confirm you want to exit"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/Green"
        android:textSize="15sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/yesView"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="85dp"
        android:layout_below="@id/textView0"
        android:layout_alignParentStart="true"
        android:background="@drawable/text_view_template"
        android:fontFamily="@font/the_bomb"
        android:gravity="center"
        android:shadowColor="@color/DarkGreen"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="10"
        android:text="Yes"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/Yellow"
        android:textSize="15sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/noView"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="85dp"
        android:layout_below="@id/textView0"
        android:layout_alignParentEnd="true"
        android:background="@drawable/text_view4_template"
        android:fontFamily="@font/the_bomb"
        android:gravity="center"
        android:shadowColor="@color/Black"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="10"
        android:text="No"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/Yellow"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</RelativeLayout>